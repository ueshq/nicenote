{
  "name": "nicenote-desktop",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "macos": "react-native run-macos",
    "windows": "react-native run-windows",
    "build:editor": "pnpm --filter @nicenote/editor-bridge build:template",
    "build:bundle": "react-native bundle --platform windows --entry-file index.js --bundle-output windows/NicenoteDesktop/Bundle/index.windows.bundle --assets-dest windows/NicenoteDesktop/Bundle --dev false --reset-cache"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-native": "0.77.1",
    "react-native-macos": "0.77.0",
    "react-native-windows": "0.77.0",
    "react-native-webview": "^13.16.0",
    "@op-engineering/op-sqlite": "^8.0.0",
    "react-native-fs": "^2.20.0",
    "@nicenote/shared": "workspace:*",
    "@nicenote/database": "workspace:*",
    "@nicenote/store": "workspace:*",
    "@nicenote/editor-bridge": "workspace:*",
    "@nicenote/ui-native": "workspace:*"
  },
  "devDependencies": {
    "typescript": "~5.9.3",
    "@types/react": "^19.0.0",
    "metro": "0.81.0",
    "@react-native/metro-config": "0.77.0",
    "@react-native/babel-preset": "0.77.0",
    "@rnx-kit/metro-config": "^1.3.0",
    "metro-config": "^0.81.5",
    "@babel/plugin-transform-export-namespace-from": "^7.0.0"
  },
  "type": "commonjs",
  "react-native-windows": {
    "init-windows": {
      "name": "NicenoteDesktop",
      "namespace": "NicenoteDesktop",
      "template": "old/uwp-cpp-app"
    }
  }
}
